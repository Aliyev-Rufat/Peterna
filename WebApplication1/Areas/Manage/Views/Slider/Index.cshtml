@using WebApplication1.Models
@model List<Slider>


    <h1>
        Create
    <a class="btn btn-primary" asp-action="Create">Create</a>
    </h1>

    @{
        int count = 0;
    }

    <div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FullName</th>
                <th scope="col">Descriptopn</th>
                <th scope="col">Position</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.FullName</td>
                    <td>@item.Description</td>
                    <td>@item.Position</td>
                    <td>
                        <div style="width:100px">
                            <img style="width:100%" src="~/Upload/@item.ImgUrl">
                        </div>
                    </td>
                    <td><a class="btn btn-secondary" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>

                </tr>

            }
        </tbody>
    </table>
    </div>